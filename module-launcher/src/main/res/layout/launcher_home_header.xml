<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:gravity="left|bottom"
        android:paddingBottom="10dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/launcher_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_white"
            android:text="07:20"
            android:textSize="@dimen/public_font_32sp"
            />

        <TextView
            android:id="@+id/launcher_statu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_white"
            android:layout_marginLeft="5dp"
            android:text="AM"
            android:textSize="@dimen/public_font_24sp"
            />

        <TextView
            android:id="@+id/launcher_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/public_white"
            android:singleLine="true"
            android:text="Aug 31"
            android:textSize="@dimen/public_font_24sp"
            />

        <TextView
            android:id="@+id/launcher_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_white"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:text="Fri"
            android:textSize="@dimen/public_font_24sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/launcher_msg"
        android:layout_width="0dp"
        android:layout_weight="2.4"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:layout_height="match_parent"
        android:textColor="@color/public_white"
        android:textSize="@dimen/public_font_24sp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:gravity="right|bottom"
        android:paddingBottom="10dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/launcher_net"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/iv_net"/>
    </LinearLayout>


</LinearLayout>